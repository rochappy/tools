# System
alias host='sudo vi /etc/hosts'
alias sthost='sudo st /etc/hosts'
alias o='open .'
alias md='mkdir'
alias rmf='rm -rf'
alias vima='vi ~/.alias'
alias stvima='st ~/.alias'
alias grep='grep --color=auto'

# Common bash commands.
# alias ls='lsd'
alias ll='ls -laFh'
alias cls='clear'
alias ps='ps -ef'

# Generate a random password
alias rp-password='openssl rand -base64 32'

# Clear DNS cache
alias rp-clean-dnscache='sudo killall -HUP mDNSResponder'

# Disk usage
alias rp-du='du -khs'

# Clean DS_Store files
alias rp-clean-ds="find . -name '.DS_Store' -exec rm {} \;"

# APP open
alias st='/Applications/Sublime\ Text.app/Contents/SharedSupport/bin/subl'
alias mweb='/Applications/MWeb.app/Contents/MacOS/MWeb'
alias code='/Applications/Visual\ Studio\ Code.app/Contents/Resources/app/bin/code'

# dev
alias dev='npm run dev'
alias start='npm run start'
alias build='npm run build'

alias push='git add --all && git commit -a -m upd && git push'
